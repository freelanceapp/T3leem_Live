<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:fillViewport="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".activities_fragments.activity_on_boarding1.OnBoarding1Activity">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/on_boarding_2"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias=".1"
                android:background="@color/transparent"
                android:text="تواصل مباشر مع المدرسين"
                android:textSize="25sp"
                android:fontFamily="@font/font"
                android:padding="10dp"

                />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/transparent"
                android:text="Live Contact with Teachers"
                android:textSize="25sp"
                android:fontFamily="@font/font"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/color1"

                />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/transparent"
                android:text="جميع المراحل التعليمية "
                android:textSize="25sp"
                android:fontFamily="@font/font"
                android:padding="10dp"
                android:layout_marginTop="5dp"

                />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/transparent"
                android:text=" All Educational Levels "
                android:textSize="25sp"
                android:fontFamily="@font/font"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/color1"

                />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_gradient"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:text="@string/next"
                android:fontFamily="@font/font"
                android:shadowDx="@android:integer/config_shortAnimTime"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</layout>
