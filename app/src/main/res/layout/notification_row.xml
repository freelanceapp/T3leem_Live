<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="com.t3leem_live.models.NotificationModel" />
        <import type="android.view.View"/>
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/white"
        app:contentPadding="8dp"
        android:layout_margin="5dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility='@{model.action_type.equals("with_action")?View.VISIBLE:View.GONE,default=gone}'

                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_avatar"
                    />
                <Space
                    android:layout_width="8dp"
                    android:layout_height="0dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:singleLine="true"
                            android:textStyle="bold"
                            android:text="@string/new_request"
                            />
                        <Space
                            android:layout_width="8dp"
                            android:layout_height="0dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray11"
                            android:textSize="12sp"
                            date="@{model.created_at}"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        >
                        <Button
                            android:id="@+id/btnAccept"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_color1"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:text="@string/accept"

                            />
                        <Space
                            android:layout_width="10dp"
                            android:layout_height="0dp"/>
                        <Button
                            android:id="@+id/btnRefuse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_red"
                            android:textSize="15sp"
                            android:text="@string/refuse"
                            android:textColor="@color/color_red"


                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility='@{model.action_type.equals("without_action")?View.VISIBLE:View.GONE,default=gone}'

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text='@{model.title??""}'
                        android:textStyle="bold"
                        android:visibility='@{model.title==null?View.GONE:View.VISIBLE}'
                        />
                    <Space
                        android:layout_width="8dp"
                        android:layout_height="0dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray11"
                        android:textSize="12sp"
                        date="@{model.created_at}"
                        />
                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text='@{model.message??""}'

                    />
            </LinearLayout>

        </FrameLayout>
    </androidx.cardview.widget.CardView>
</layout>